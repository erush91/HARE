<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <!-- Init Config -->
    <group>
        <include file="$(find ros_pololu_servo)/launch/hare_pololu_config.xml" />
        <include file="$(find rs_custom_wrapper)/launch/hare_rs_config.xml" />
    </group>

    <!-- Start Camera -->
    <include file="$(find rs_custom_wrapper)/launch/rs.launch"/>

    <!-- Start Filter -->
    <rosparam command="load" file="$(find plan_ctrl)/config.yaml" />
    <node name="cam_arr_filter" pkg="plan_ctrl" type="rs_array_filter" />

    <!-- Start Control -->    
    <include file="$(find ros_pololu_servo)/launch/HARE_control.launch"/>

    <!-- Start Planner -->
    <node name="CarFSM" pkg="plan_ctrl" type="simple_PID_on_wall.py" />
    
</launch>

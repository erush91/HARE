<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <!-- Init Config -->
    <group>
        <!-- Start Control -->    
        <include file="$(find ros_pololu_servo)/launch/hare_pololu_config.xml" />
        <!-- Start Camera -->
        <include file="$(find rs_custom_wrapper)/launch/hare_rs_config.xml" />
		   
    </group>

    <!-- Start Filter -->
    <rosparam command="load" file="$(find plan_ctrl)/config.yaml" />
    <node name="cam_arr_filter" pkg="plan_ctrl" type="rs_array_filter" output="screen" />

    <!-- Start Planner -->
    <param name="LINEAR_SPEED" type="double" value="0.1"/>
    <param name="ANGLE_DIFF_MIN" type="double" value="0.0"/>
    <param name="P_VALUE" type="double" value="0.500"/>
    <param name="I_VALUE" type="double" value="0.0000"/>
    <param name="D_VALUE" type="double" value="0.0000"/>
    <node name="CarFSM" pkg="plan_ctrl" type="simple_PID_on_wall.py" output="screen" />
    
</launch>
